keywords = {BoT-IoT dataset,Network intrusion detection,Supervised learning,UNSW-NB15 dataset},
pages = {40--57},
title = {{A Comprehensive Analysis of Accuracies of Machine Learning Algorithms for Network Intrusion Detection}},
volume = {12081 LNCS},
