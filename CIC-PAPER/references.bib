journal = {Computers},
keywords = {Anomaly detection,Autoencoders,IoT security,Transfer learning},
number = {7},
pages = {1--14},
title = {{Using autoencoders for anomaly detection and transfer learning in iot}},
volume = {10},
year = {2021}
}
@article{Alin2020,
