journal = {Sustainable Cities and Society},
keywords = {Distributed,Feature extraction,Feature selection,IDS,Intrusion detection,IoT,Machine learning,Semi-distributed},
number = {January},
pages = {102324},
publisher = {Elsevier},
title = {{Scalable machine learning-based intrusion detection system for IoT-enabled smart cities}},
