journal = {Applied Intelligence},
keywords = {Co-clustering,DDoS detection,Entropy analysis,Extra-Trees,Feature selection,Information gain ratio},
number = {10},
pages = {3193--3208},
publisher = {Applied Intelligence},
title = {{Semi-supervised machine learning approach for DDoS detection}},
volume = {48},
year = {2018}
}
@article{Tahsien2020,
